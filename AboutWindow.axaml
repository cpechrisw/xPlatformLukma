<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		Width="400" Height="300"
        x:Class="xPlatformLukma.AboutWindow"
        Title="About"
		RequestedThemeVariant="Dark"
		Background="#717480"
		CanResize="False"
		Icon="/Assets/lukma_outlined.ico">
	
	<Window.Styles>
		<Style Selector="TextBlock">
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="FontSize" Value="15"/>
			<Setter Property="HorizontalAlignment" Value="Center"/>
		</Style>
		<Style Selector="Button">
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="HorizontalAlignment" Value="Center"/>
		</Style>
		<Style Selector="Label">
			<Setter Property="HorizontalAlignment" Value="Center"/>
		</Style>

	</Window.Styles>
	<DockPanel>
		<Button DockPanel.Dock="Bottom" Click="ButtonClick_Close" Content="Close" Margin="0,0,0,15"/>
		<TabControl>
			<TabItem Header="General">
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,10,0,0">
					<StackPanel Orientation="Vertical" >
						<TextBlock Text="Lukma" HorizontalAlignment="Center"/>
						<Label Content="Version: 1.5.0" Margin="0,-2,0,0"/>
						<Label Content="Copyright 2024 All rights reserved" FontSize="10" Margin="0,-3,0,0"/>
						<Label Content="For help or information contact" Margin="0,10,0,5"/>
						<Label Content="DoubleBSkiesLLC@gmail.com" Margin="0,-10,0,5"/>
						
					
						
					</StackPanel>
				</StackPanel>
			</TabItem>
			<TabItem Header="License">
				<StackPanel Orientation="Vertical" >
					<TextBlock Text="Copying/Distributing without authors consent" HorizontalAlignment="Center"/>
					<TextBlock Text=" is prohibited"
							   HorizontalAlignment="Center" />
					<TextBox TextWrapping="Wrap" Height="150" AcceptsReturn="True" Margin="0,4,0,0"
							 Name="txtBlock_licAgreement"
							 />
				</StackPanel>
			</TabItem>

		</TabControl>
		
		
	</DockPanel>
	
	
	
	
	
</Window>
